<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_takas_kitap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qzcelik.air.kitaptakas.TakasKitap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kitapTurSpin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rcListe"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:layout_marginStart="0dp">

    </android.support.v7.widget.RecyclerView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    android:layout_marginEnd="100dp">

    <EditText
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/yazarAraEt"
        android:hint="Yazar Ara"
        android:layout_marginEnd="5dp" />

    <Button
        android:layout_width="40dp"
        android:layout_alignTop="@+id/rcListe"
        android:id="@+id/yazarAraBut"
        android:background="@drawable/butonbg5"
        android:layout_height="40dp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="170dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/kitapAraEt"
            android:layout_weight="1"
            android:hint="Kitap Ara"
            android:layout_marginEnd="5dp" />

        <Button
            android:layout_width="40dp"
            android:layout_alignTop="@+id/rcListe"
            android:id="@+id/kitapAraBut"
            android:background="@drawable/butonbg5"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>
